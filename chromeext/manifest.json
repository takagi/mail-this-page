{
  "manifest_version": 2,
  "name": "Mail this page",
  "description": "This extension adds an email button to the toolbar which allows me to email the page to my mail address.",
  "version": "1.0.0",
  "background": {
    "scripts": [ "mail_this_page.js" ],
    "persistent": false
  },
  "icons": { "128": "mail_128x128.png" },
  "permissions": [
    "tabs", "http://*/*", "https://*/*"
  ],
  "browser_action": {
    "default_title": "Mail this page",
    "default_icon": "email_16x16.png"
  }
}
